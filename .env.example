# BusinessFinder Environment Variables
# Copy this file to .env.local and fill in your values

# ===========================================
# SITE CONFIGURATION
# ===========================================
NEXT_PUBLIC_SITE_URL=https://businessfinder.com
NEXT_PUBLIC_APP_NAME=BusinessFinder

# ===========================================
# SUPABASE CONFIGURATION
# ===========================================
# Get these from your Supabase project settings > API
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# Service role key (for server-side operations only, never expose to client)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ===========================================
# AUTHENTICATION PROVIDERS
# ===========================================
# Google OAuth (console.cloud.google.com)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# LinkedIn OAuth (developer.linkedin.com)
LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=

# ===========================================
# EMAIL / SMTP (for Magic Link & Notifications)
# ===========================================
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=your-sendgrid-api-key
EMAIL_FROM=noreply@businessfinder.com
EMAIL_FROM_NAME=BusinessFinder

# ===========================================
# INTEGRATIONS (Optional)
# ===========================================
# Stripe (for payments)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxx
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# Shopify (for P&L integration connections)
SHOPIFY_API_KEY=
SHOPIFY_API_SECRET=

# QuickBooks (for P&L integration connections)
QUICKBOOKS_CLIENT_ID=
QUICKBOOKS_CLIENT_SECRET=

# ===========================================
# ANALYTICS & SEO
# ===========================================
# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Google Search Console Verification
NEXT_PUBLIC_GOOGLE_SITE_VERIFICATION=

# ===========================================
# SECURITY
# ===========================================
# Rate limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000
